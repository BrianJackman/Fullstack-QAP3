<!DOCTYPE html>
<html>
<head>
    <title>Landing</title>
</head>
<body>
    <h1>Welcome <%= user.username %></h1>
    <% if (user.role === 'admin') { %>
        <h2>All Users</h2>
        <ul>
            <% users.forEach(u => { %>
                <li><%= u.username %> - <%= u.email %> - <%= u.role %></li>
            <% }) %>
        </ul>
    <% } %>
    <a href="/logout">Logout</a>
</body>
</html>